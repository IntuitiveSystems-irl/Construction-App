# Database Configuration
DB_FILENAME=./rooster.db
DB_ENCRYPTION_KEY=

# JWT Authentication
JWT_SECRET=your-secret-key-here

# Email Configuration (Resend)
RESEND_API_KEY=your-resend-api-key
SENDER_EMAIL=your-email@domain.com
BUSINESS_EMAIL=info@yourdomain.com

# Cal.com Integration (Optional)
CALCOM_WEBHOOK_SECRET=your-calcom-webhook-secret

# Server Configuration
PORT=5002
FRONTEND_PORT=5003
NODE_ENV=development

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_NOTIFICATION_EMAIL=admin@yourdomain.com

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5003

# Session Configuration
SESSION_SECRET=your-session-secret-here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Contract Configuration
CONTRACT_TEMPLATE_DIR=./contract-templates
CONTRACT_OUTPUT_DIR=./contracts

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
